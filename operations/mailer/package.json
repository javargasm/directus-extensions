{
  "name": "directus-extension-mailer-operation",
  "description": "Custom operation to send emails with Nodemailer",
  "icon": "extension",
  "version": "1.0.0",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-extension-operation"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "directus:extension": {
    "type": "operation",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "source": {
      "app": "src/app.ts",
      "api": "src/api.ts"
    },
    "host": "^10.10.0"
  },
  "scripts": {
    "build": "directus-extension build",
    "watch": "directus-extension build -w --no-minify",
    "link": "directus-extension link"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "11.0.1",
    "@types/node": "^20.11.30",
    "typescript": "^4.9.5",
    "vue": "^3.4.21"
  }
}
